    <script>
        var myApp = angular.module('myApp', []);
        myApp.controller('GreetingNamesController', ['$scope', function ($scope) {
            $scope.greeting = 'Hola';
            $scope.names = [
                                { name: 'Jani', country: 'Norway' },
                                { name: 'Hege', country: 'Sweden' },
                                { name: 'Kai', country: 'Denmark' }
